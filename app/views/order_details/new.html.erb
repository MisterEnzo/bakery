<div class="container col-sm-6 col-sm-offset-3">
  <h1>Order Page</h1>
  <h3>How much do you want to Order?</h3>

  <%= form_for(:details,  url: order_order_details_path, html: {class: ""}) do |f| %>
    <div class="form-group">
      <%= f.label :cookies_q, "Cookies Quantity" %>
      <%= f.number_field(:cookies_q, in: 1..10, step: 1) %>
    </div>
    <div class="form-group">
      <%= f.label :brownies_q, "Brownies Quantity" %>
      <%= f.number_field(:brownies_q, in: 1..10, step: 1) %>
    </div>
    <div class="form-group">
      <%= f.label :cakes_q, "Cakes Quantity" %>
      <%= f.number_field(:cakes_q, in: 1..10, step: 1) %>
    </div>
    <%= f.submit "Place Order" %>
  <% end %>
</div>

