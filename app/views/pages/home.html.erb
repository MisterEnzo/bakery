<div class="container banner">
  <h1>Momma's Gluten Free Bakes</h1>
  <p>Your home for gluten-free goodies</p>
</div>

<div class="container">
  <div class="row">
    <% @menu_items.each do |item| %>
      <div class="col-md-4">
        <%= image_tag item.photo_url, height: 200 %>
        <p><%= item.name %></p>
        <p><%= item.description %></p>
        <p><%= humanized_money_with_symbol(item.price) %></p>

      </div>
    <% end %>

  </div>
</div>
