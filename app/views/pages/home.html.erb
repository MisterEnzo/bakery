<div class="banner"></div>
<div class="container">

  <h1 class='tag-line'>Your home for gluten-free goodies</h1>

</div>

<div class="container">
  <div class="row">
  <h2 class="menu">MENU</h2>
    <% @menu_items.each do |item| %>
      <div class="col-md-4 menu-cards">
        <%= image_tag item.photo_url %>
        <p class="menu-item"><strong><%= item.name %></strong></p>

        <div class="menu-text"><p><%= item.description %></p></div>
        <p class="menu-price"><%= humanized_money_with_symbol(item.price) %></p>

      </div>
    <% end %>

  </div>
  <div class="order">
    <%= form_tag orders_path do %>
    <%= submit_tag 'Place an Order', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
